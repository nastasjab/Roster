<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <filter>
        <filter-name>MVCFilter</filter-name>
        <filter-class>lv.javaguru.java2.servlet.mvc.MVCFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>MVCFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ParameterProcessingServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlet.ParameterProcessingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ParameterProcessingServlet</servlet-name>
        <url-pattern>/paramProcessing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionUsageServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlet.SessionUsageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SessionUsageServlet</servlet-name>
        <url-pattern>/session</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RedirectToJSPServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlet.RedirectToJSPServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RedirectToJSPServlet</servlet-name>
        <url-pattern>/jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UsersServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlet.UsersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShiftServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlet.ShiftsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShiftServlet</servlet-name>
        <url-pattern>/shifts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MainMenuServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlet.MainMenuServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainMenuServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatternsServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlet.PatternsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PatternsServlet</servlet-name>
        <url-pattern>/patterns</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShiftPatternsServlet</servlet-name>
        <servlet-class>lv.javaguru.java2.servlet.ShiftPatternServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShiftPatternsServlet</servlet-name>
        <url-pattern>/shiftpattern</url-pattern>
    </servlet-mapping>

</web-app>